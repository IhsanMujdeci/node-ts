{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./build",
    "rootDir": "./src",
    "baseUrl": "./src",
    //    "paths": {
    //      "@app/*": ["./*"]
    //    },
    "importsNotUsedAsValues": "remove",
    "incremental": true,
    "assumeChangesOnlyAffectDirectDependencies": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
