{
  "extends": "@tsconfig/node18-strictest/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./build", // some comments
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["./*"]
    },
    "importsNotUsedAsValues": "remove"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
