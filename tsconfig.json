{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": ".",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"]
    },
    "skipLibCheck": true,
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": ["*"]
      }
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "incremental": true,
    "assumeChangesOnlyAffectDirectDependencies": true
  },
  "ts-node": {
    "swc": true
  },
  "include": ["src/**/*", "config/*.json"],
  "exclude": ["node_modules"]
}
