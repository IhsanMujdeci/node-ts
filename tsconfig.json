{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"]
    },
    "skipLibCheck": true,
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": ["*"]
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
