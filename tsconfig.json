{
  "display": "Node 18",
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "incremental": true,
    "assumeChangesOnlyAffectDirectDependencies": true,
    "outDir": "./build",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@app/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
