{
  "name": "node-ts",
  "version": "1.0.0",
  "description": "A simple starter for ts with node",
  "main": "index.js",
  "scripts": {
    "test": "DOTENV_CONFIG_PATH=.test.env jest",
    "test:watch": "npm test -- --watch",
    "build": "babel --extensions '.ts' src --out-dir build",
    "start:dev": "DOTENV_CONFIG_PATH=.env ts-node-dev -r ./env.load.js -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
    "prepare": "husky install",
    "prettier": "pretty-quick --staged"
  },
  "author": "Ihsan aka, lvcid aka yung apriori",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-typescript": "^7.16.7",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.4",
    "babel-plugin-module-resolver": "^5.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.0",
    "jest-watch-typeahead": "^1.0.0",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "yargs": "^17.1.1"
  }
}
