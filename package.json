{
  "name": "node-ts",
  "version": "1.0.0",
  "description": "DMG Node TS Starter",
  "main": "index.js",
  "scripts": {
    "start": "node build/src/index.js",
    "start:dev": "nodemon --exec 'node -r @swc-node/register' ./src/index.ts",
    "build": "npm run check:types && tswc -- src -d build/src ",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "check:types": "tsc --noEmit --diagnostics",
    "prepare": "husky install",
    "prettier": "pretty-quick --staged"
  },
  "author": "Ihsan Mujdeci",
  "license": "ISC",
  "devDependencies": {
    "@swc-node/jest": "^1.6.2",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.35",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/config": "^3.3.0",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.4",
    "husky": "^7.0.2",
    "jest": "^27.2.0",
    "jest-watch-typeahead": "^1.0.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "typescript": "^4.4.3",
    "@swc-node/register": "^1.6.2"
  },
  "dependencies": {}
}
